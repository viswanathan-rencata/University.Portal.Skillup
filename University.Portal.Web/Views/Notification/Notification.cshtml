*@
@{
}

@model IEnumerable<University.Portal.Data.Data.ViewModels.NotificationGridViewModel>;

@{
    <label style="margin-top:50px;font-size:x-large">Notifications</label>
    if (Model != null && Model.Count() > 0)
    {
        <table id="table" class="table table-bordered" style="margin-top:50px;" data-filter-control="true">
            <thead>
                <tr>
                    <th data-filter-control="input">S.No</th>
                    <th data-field="Message" data-filter-control="input" data-template="" >Message</th>
                    <th data-field="Created On" data-filter-control="input">Received On</th>
                </tr>
            </thead>
            <tbody>
                @{var i = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@(i)</th>
                        <th scope="row"> @(new HtmlString(item.Message.ToString()))</th>
                        <td> @item.CreatedOn.ToString("MM/dd/yyyy")</td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    }
    else
    {
        <table class="table table-bordered" style="margin-top:50px">
            <thead>
                <tr>                    
                    <th>Message</th>
                    <th>Received On</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="1" class="text-center">No Records Found!</td>
                </tr>
            </tbody>
        </table>
    }
}

<div style="float:right">
    <h5>Total Records (@Model.Count())</h5>
</div>

<script>
    $(function () {
        $('#table').bootstrapTable();
        $('.fixed-table-loading').remove();        
    })
</script>