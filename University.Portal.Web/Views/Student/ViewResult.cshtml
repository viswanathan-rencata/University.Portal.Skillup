@{
}
@model IEnumerable<ViewExamResultModel>;

@{
    if (Model != null && Model.Count() > 0)
    {
        <table id="table1" class="table table-bordered" style="margin-top:50px" data-filter-control="true">
            <thead>
                <tr>                    
                    <th data-field="Subject Code" data-filter-control="input">Subject Code</th>
                    <th data-field="Subject Name" data-filter-control="input">Subject Name</th>
                    <th data-field="Mark" data-filter-control="input">Mark</th>
                    <th data-field="Result" data-filter-control="input">Result</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.SubjectCode</th>                        
                        <td>@item.SubjectName</td>
                        <td>@item.Mark</td>
                        <td>@item.Result</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table class="table table-bordered" style="margin-top:50px">
            <thead>
                <tr>                    
                    <th>Subject Code</th>
                    <th>Subject Name</th>
                    <th>Mark</th>
                    <th>Result</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="4" class="text-center">No Records Found!</td>
                </tr>
            </tbody>
        </table>
    }
}

<div style="float:right">
    <h3>Total Records (@Model.Count())</h3>
</div>

<script>
    $(function () {
        $('#table1').bootstrapTable();
        $('.fixed-table-loading').remove();
    })
</script>