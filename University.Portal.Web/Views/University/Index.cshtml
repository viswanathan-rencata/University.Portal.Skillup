@using University.Portal.Data.Data.ViewModels;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_CommonLayout";
}

@model IEnumerable<StudentGridModel>;

@{
	if (Model != null && Model.Count() > 0)
	{
		<table class="table table-bordered" style="margin-top:50px">
			<thead>
				<tr>
					<th>Student Code</th>
					<th>Name</th>					
					<th>Gender</th>
					<th>Email</th>
					<th>Phone Number</th>
					<th>Date Of Birth</th>
					<th>Date of Joining</th>
					<th>Department</th>
					<th>Year</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<th scope="row">@item.StudentCode</th>
						<td>@item.FullName</td>
						<td>@item.Gender</td>
						<td>@item.Email</td>
						<td>@item.PhoneNumber</td>
						<td>@item.DateOfBirth</td>
						<td>@item.DateOfJoining</td>
						<td>@item.DepartmentName</td>
						<td>@item.Year</td>
						<td>
							<a asp-action="Edit" asp-route-id=@item.Id class="btn btn-primary">Edit</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<table class="table table-bordered" style="margin-top:50px">
			<thead>
				<tr>
					<th>Student Code</th>
					<th>Name</th>					
					<th>Gender</th>
					<th>Email</th>
					<th>Phone Number</th>
					<th>Date Of Birth</th>
					<th>Date of Joining</th>
					<th>Department</th>
					<th>Year</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td colspan="9" class="text-center">No Records Found!</td>
				</tr>
			</tbody>
		</table>
	}
}

<input type="button" value="Add Student" class="btn btn-primary mt-5" style="float:right" onclick="@("window.location.href='" + @Url.Action("Create", "University") + "'");" />

<style type="text/css">
	a.btn {border-radius: .25rem; border: 1px solid transparent; padding: .5rem 1rem; color: #fff; }
	a.btn { border-radius: .25rem; }
</style>