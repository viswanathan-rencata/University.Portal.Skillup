@using University.Portal.Data.Data.ViewModels;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = "_CommonLayout";
}

@model IEnumerable<PublishDocumentViewModel>;

@{
    <label style="margin-top:50px;font-size:x-large">Publish Documents</label>
    if (Model != null && Model.Count() > 0)
    {
        <table id="table1" class="table table-bordered" style="margin-top:50px" data-filter-control="true">
            <thead>
                <tr>
                    <th data-filter-control="input">S.No</th>
                    <th data-field="Student Name" data-filter-control="input">Student Name</th>
                    <th data-field="Department" data-filter-control="input">Department</th>
                    <th data-field="Class" data-filter-control="input">Class</th>
                    <th data-field="Document" data-filter-control="input">Document</th>
                    <th colspan="1" data-field="Action">Action</th>

                </tr>
            </thead>
            <tbody>
                @{
                    var i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@(i)</th>
                        <th scope="row">@item.StudentName</th>
                        <td>@item.Department</td>
                        <td>@item.Class</td>
                        <td>@item.Document</td>
                        <td>
                            <div class="d-flex align-items-center justify-content-evenly">
                                <a asp-action="PublishDocument" asp-route-id=@item.Id asp-route-documentId=@item.DocumentId class="btn btn-primary gridbtn">Publish Document</a>
                            </div>
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    }
    else
    {
        <table class="table table-bordered" style="margin-top:50px">
            <thead>
                <tr>
                    <th>Student Name</th>
                    <th>Department</th>
                    <th>Class</th>
                    <th>Document</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="4" class="text-center">No Records Found!</td>
                </tr>
            </tbody>
        </table>
    }
}

<div style="float:right">
    <h5>Total Records (@Model.Count())</h5>    
</div>

<script>
    $(function () {
        $('#table1').bootstrapTable();
        $('.fixed-table-loading').remove();
    })
</script>